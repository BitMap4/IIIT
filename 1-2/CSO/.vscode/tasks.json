{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc",
            "command": "/usr/bin/gcc -g '${fileDirname}'/* -o '${fileDirname}/${fileBasenameNoExtension}'",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}